<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:d="http://xamarin.com/schemas/2014/forms/design"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             x:Class="SendMeADrink_Official.Profile"
             NavigationPage.HasNavigationBar="False">

    <ContentPage.Content>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="60"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="auto"/>
            </Grid.RowDefinitions>

            <StackLayout Orientation="Horizontal" Grid.Row="0">
                <ImageButton Source="BackButton.png" Clicked="BackButton_Clicked"
                             Scale="0.5" BackgroundColor="Transparent"/>

                <Label Text="Profile" TextColor="Black" FontSize="28"  FontAttributes="Bold"
                       VerticalTextAlignment="Center"/>
            </StackLayout>

            <Grid Padding="15,10" RowSpacing="10" Grid.Row="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="auto"/>
                </Grid.RowDefinitions>
                <Label Grid.Row="0">
                    <Label.FormattedText>
                        <FormattedString>
                            <Span Text="Username: " FontAttributes="Bold" FontSize="20" />
                            <Span Text="{Binding Username}" FontSize="18"/>
                        </FormattedString>
                    </Label.FormattedText>
                </Label>
                
                <Label Grid.Row="1">
                    <Label.FormattedText>
                        <FormattedString>
                            <Span Text="Email: " FontAttributes="Bold" FontSize="20" />
                            <Span Text="{Binding Email}" FontSize="18"/>
                        </FormattedString>
                    </Label.FormattedText>
                </Label>

                <Label Grid.Row="2">
                    <Label.FormattedText>
                        <FormattedString>
                            <Span Text="Age: " FontAttributes="Bold" FontSize="20" />
                            <Span Text="{Binding Age}" FontSize="18"/>
                        </FormattedString>
                    </Label.FormattedText>
                </Label>

                <!--4. Contact information: Board inforation-->
                <Grid Grid.Row="3" Margin="0,5">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="0.5*"/>
                        <RowDefinition Height="0.5*"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="0.25*"/>
                        <ColumnDefinition Width="0.50*"/>
                        <ColumnDefinition Width="0.25*"/>
                    </Grid.ColumnDefinitions>
                    <Label Grid.Row="0" Grid.Column="0"
                           Text="Send" FontSize="20" FontAttributes="Bold"
                           HorizontalTextAlignment="Center"/>
                    <Label Grid.Row="1" Grid.Column="0" 
                           Text="678" FontSize="18"
                           HorizontalTextAlignment="Center"/>

                    <Label Grid.Row="0" Grid.Column="1"
                           Text="Recieved" FontSize="20" FontAttributes="Bold"
                           HorizontalTextAlignment="Center"/>
                    <Label Grid.Row="1" Grid.Column="1"
                           Text="340" FontSize="18"
                           HorizontalTextAlignment="Center"/>

                    <Label Grid.Row="0" Grid.Column="2"
                           Text="S/R" FontSize="20" FontAttributes="Bold"
                           HorizontalTextAlignment="Center"/>
                    <Label Grid.Row="1" Grid.Column="2"
                           Text="1.99" FontSize="18"
                           HorizontalTextAlignment="Center"/>
                </Grid>
            </Grid>

            <!--4. Contact information: Follow button-->
            <Button Grid.Row="2"
                    Text="Edit Profile" TextColor="White"
                    FontAttributes="Bold" FontSize="17.5"
                    BackgroundColor="#218cff" 
                    CornerRadius="10" Margin="15,15,15,7.5"
                    Clicked="EditButton_Clicked"/>

            <Button Grid.Row="3"
                    Text="Payment" TextColor="White"
                    FontAttributes="Bold" FontSize="17.5"
                    BackgroundColor="#218cff" 
                    CornerRadius="10" Margin="15,7.5,15,15"
                    Clicked="PaymentButton_Clicked"/>
        </Grid>
    </ContentPage.Content>
</ContentPage>